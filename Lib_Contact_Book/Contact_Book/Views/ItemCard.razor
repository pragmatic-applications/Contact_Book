
@inherits ItemDataBase

@{
    var ItemLink = $"{PageRoute.S_AdminDetails}/{this.EntityCascadingParameter.Id}";
}

<CascadingValue Value="@ItemLink" Name="@nameof(CascadingData.TargetUrlCascadingValue)" IsFixed="false">
    <CascadingValue Value="@CssData.CardLinkCssCascadingValueThemeBlueB" Name="@nameof(CascadingData.CardLinkCssCascadingValue)" IsFixed="false">
        <Card TEntity="ContactEntityDto" class="@CssData.CardCssThemeBlueB">
            <CardHeader TEntity="ContactEntityDto">
                @this.EntityCascadingParameter.ContactName
            </CardHeader>
            <CardBody TEntity="ContactEntityDto">
                <CardText TEntity="ContactEntityDto">
                    @this.EntityCascadingParameter.FirstName
                </CardText>
                <CardText TEntity="ContactEntityDto">
                    @this.EntityCascadingParameter.Email
                </CardText>
                <CardText TEntity="ContactEntityDto">
                    Checked: @this.IsDone
                </CardText>

                @if(this.IsCrudCascadingParameter)
                {
                    <CardLink TEntity="ContactEntityDto">
                        Detail
                    </CardLink>
                }

            </CardBody>
            <CardFooter TEntity="ContactEntityDto">
                ID: #@this.EntityCascadingParameter.Id
            </CardFooter>
        </Card>
    </CascadingValue>
</CascadingValue>

