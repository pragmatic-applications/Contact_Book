@page "/ContactBook/Admin"
@page "/ContactBook/Admin/{Id:int}"

@inherits ItemBase

<Banner BannerTitleParameter="@this.BannerTitleValue" AppNameParameter="@this.AppNameValue" />

<div class="center_max_width_lg">

    @if(this.ContactEntityDtos == null)
    {
        <p><em>Loading...</em></p>
    }
    else
    {
        <CascadingValue Value="this.ContactEntityDtos" Name="@nameof(CascadingData.EntitiesParameterValue)" IsFixed="false">
            <AdminIndexContainer />
        </CascadingValue>
    }

    <PageFeature OnSelectedPage="this.SelectedPage" OnSortChanged="this.SortChanged" OnSearchChanged="this.SearchChanged" PagerDataParameter="@this.PagerData" />

</div>

<div class="page-top">
    <NavLink href="@PageRoute.ContactBookAdmin" class="top"></NavLink>
</div>

